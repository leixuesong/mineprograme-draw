.draw {
  width: 612rpx;
  height: 612rpx;
  background-size: 100% 100%;
  font-size: 26rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 50%;
  border:3px solid red;
}

.draw .item {
  width: 100%;
  height: 100%;
  position: relative;
  text-align: center;
}

.item-view {
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 50%;
  transform-origin: 0% 100%;
  transform: rotate(60deg) skewY(-60deg);
}

.draw .item:nth-child(1) {
  top: 12px;
  left: 100px;
  transform: rotate(0deg) skewY(-60deg);
  background-color: #000000;
}

.draw .item:nth-child(2) {
  top: 56px;
  left: 180px;
  transform: rotateZ(60deg)
}

.draw .item:nth-child(3) {
  top: 150px;
  left: 180px;
  transform: rotateZ(120deg)
}

.draw .item:nth-child(4) {
  top: 190px;
  left: 100px;
  transform: rotateZ(180deg)
}

.draw .item:nth-child(5) {
  top: 150px;
  left: 32px;
  transform: rotate(240deg);
}

.draw .item:nth-child(6) {
  top: 56px;
  left: 32px;
  transform: rotate(300deg);
}

.item-image {
  width: 42px;
  height: 42px;
  overflow: hidden;
}

.button {
  width: 65px;
  height: 65px;
  position: absolute;
  left: 153px;
  top: 130px;
}

.button::before {
  content: '';
  width: 0;
  height: 0;
  border-right: 12px solid transparent;
  border-left: 12px solid transparent;
  border-bottom: 26px solid #f5c678;
  position: absolute;
  left: 20px;
  top: -12px;
}

.button-text {
  width: 65px;
  height: 65px;
  box-sizing: border-box;
  padding-top: 3px;
  text-align: center;
  background-color: #f0e0c9;
  border: 5px solid #caaa7c;
  border-radius: 50%;
  position: absolute;
  font-weight: bold;
  color: #392813;
}

.item:nth-child(odd) .item-text {
  color: #f0e0c9
}

.item:nth-child(even) .item-text {
  color: #243067
}